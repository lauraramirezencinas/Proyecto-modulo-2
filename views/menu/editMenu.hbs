
<div>
    {{> navBarPartial}}
</div>
<div id="main-margin">

<!-- TITULO -->
<h2 class="Title">Edita Categoria: <b>{{this.categoria.nombreCategoria}}</b></h2>



    <div id="center-container">
        <form id="editName" action="/menu/{{this.categoria.id}}" method="POST">
            <label for=""><b> Nombre de la categoria:</b></label>
            <input class="input" type="text" id="nombreMenu" name="nombreCategoria"
                value="{{this.categoria.nombreCategoria}}">
            <button class="button" type="submit">Guardar</button>
        </form>

        <br>
        <!-- FORMULARIO EDITAR ELEMENTO MENU -->
        <form id="editElementPrice" action="/elemento" method="POST">
            <label id="elemento" for=""><b> Elemento:</b></label>
            <input class="input" type="text" id="elementoMenu" name="nombre">

            {{#if isCarta}}
            <label for="" id="price-element"><b> Precio</b></label>
            <input class="input" type="text" id="precio" name="precio">
            {{/if}}
            <input class="input" type="hidden" id="categoria" name="idCategoria" value="{{this.categoria.id}}">
            <button class="button" type="submit">Guardar</button>
        </form>
    </div>
    <!-- ELEMENTOS MENU -->

    {{#if elementosMenu}}
    <div id="listing-container">
        <ul id="edittingOptions-container">
            {{#each elementosMenu}}
            <div class="crudOpsContainer">
                <li id="crudElement">
                    <span class="elemento-nombre"><b> {{this.nombre}}</b></span>
                    <span class="elemento-precio"><b>{{this.precio}} €</b></span></li>

                <button class="btn button-elemento-editar" data-toggle="modal" data-target="#exampleModal"> Editar<i
                        class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                <form action="/elemento/{{this._id}}/borrar" method="POST">
                    <button class=" btn btn-danger restaurant-delete"><i class="fa fa-trash-o"></i></button>
                </form>
                <form action='/elemento/{{this.id}}/editar' method="POST">
                    <input type="text" id="edit-element" class="input-edit-elemento hidden" name="nombre"
                        value="{{this.nombre}}">
                    {{#if ../isCarta}}
                    <input type="text" id="edit-precio" class="input-edit-element-precio hidden" name="precio"
                        value="{{this.precio}}">
                    {{/if}}
                    <button type="submit" class="createButton editar-elemento hidden">Guardar</button>
                </form>

            </div>
            {{/each}}
        </ul>

    </div>
    {{else}}
    {{/if}}

    <!-- LINK VOLVER -->
    <div id="backLink">
        <a href="/restaurante/{{categoria.idRestaurante}}?idmenu={{menu.id}}">Volver a mi menú</a>
    </div>
</div>