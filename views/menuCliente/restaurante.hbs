<div id="main-margin">
  <h1 class="Title">{{restaurante.nombre}}</h1>
  <div class="container">
    <!--TITULO -->

    <!--LOGO -->
    <img id="logoMenuDisplay" src="{{restaurante.logoUrl}}">
    {{#each menus}}

    <!--CARTA -->
    {{#if this.isCarta}}
    {{#each this.categorias}}
    <div class="menu-page">
      <button class="menu-name">{{this.nombre}}</button>
      <div class="hidden menu-container1">
        {{#each this.elementos}}
        <br>
        <div id="element">{{this.nombre}}</div>
        <div id="prize"> {{this.precio}} €</div>
        {{/each}}
      </div>
    </div>
    <br>
    {{/each}}

    {{else}}
    <!--MENU ESPECIAL -->
    <div class="menuEspecial">
      <button class="menu-especial">{{this.nombre}} </button>
      <div class="hidden menu-container">
        {{#each this.categorias}}
        <h2>{{this.nombre}}</h2>
        {{#each this.elementos}}
        <br>
        <div id="element">{{this.nombre}} </div>
        <br>
        {{/each}}
        {{/each}}
         <p style="font-size: 18px;">
          {{this.infoMenu}}
        </p>
        <br>
        <p style="font-size: 23px;">
          {{this.precio}}€
        </p>
      </div>
    </div>

    {{/if}}
    {{/each}}


  </div>
</div>